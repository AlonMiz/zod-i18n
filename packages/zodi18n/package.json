{
  "name": "zodi18n",
  "version": "0.0.0",
  "description": "A library for localizing zod error messages.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:aiji42/zod-i18n.git",
  "author": "aiji42 <aiji42@gmail.com> (https://twitter.com/aiji42_dev)",
  "license": "MIT",
  "private": true,
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ],
      "languages/ja": [
        "./dist/languages/ja.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./languages/*": {
      "types": "./dist/languages/*.d.ts",
      "import": "./dist/languages/*.mjs",
      "require": "./dist/languages/*.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "i18next": ">=21.3.0",
    "zod": ">=3.17.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^18.6.4",
    "c8": "^7.12.0",
    "i18next": "^21.8.16",
    "rimraf": "^3.0.2",
    "tsup": "^6.2.1",
    "typescript": "^4.7.4",
    "vitest": "^0.21.0",
    "zod": "^3.17.10"
  }
}
